<%- model_class = User -%>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Usuários</h2>
        <ol class="breadcrumb">
            <!-- <li><a href="<%= url_for :controller => 'home', :action => 'index' %>">Home</a></li> -->
            <!-- <li class="active"><strong>Lista de usuários</strong></li> -->
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<p id="notice"><%= notice %></p>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover Tabela" >
                        <thead>
                            <tr>
                                <th width="05%">&nbsp</th>
                                <th width="05%">&nbsp</th>
                                <th width="05%">&nbsp</th>
                                                                <th><%=  model_class.human_attribute_name(:id) %></th>
                                                                <th><%=  model_class.human_attribute_name(:email) %></th>
                                                                <th><%=  model_class.human_attribute_name(:role) %></th>
                                                                <th><%=  model_class.human_attribute_name(:created_at) %></th>
                                                            </tr>
                        </thead>
                        <tbody>
                            <%= content_tag_for(:tr, @control_users) do |user| %>
                            <td><%= link_to '', user, class: "btn btn-xs fa fa-search"%></td>
                            <td><%= link_to '', edit_user_path(user), class: "btn btn-xs fa fa-paste" %></td>
                            <td><%= link_to '', user, class: "btn btn-xs fa fa-times", method: :delete, data: { confirm: 'Confirma Exclusão ?' } %></td>
                                                        <td><%= user.id %></td>
                                                        <td><%= user.email %></td>
                                                        <td><%= user.role %></td>
                                                        <td><%= user.created_at %></td>
                                                        <% end %>
                        </tbody>
                        <!-- <tfoot>
                            <tr>
                                <th>&nbsp</th>
                                <th>&nbsp</th>
                                <th>&nbsp</th>
                                                                <th>Descricao</th>
                                                            </tr>
                        </tfoot> -->
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<% content_for :javascript do %>
<script type="text/javascript">
    $(function() {

      $('.Tabela').dataTable({
        // "dom": 'T<"clear">lfrtip',
        "language": {"sSearch": "Buscar:"},
        "aoColumnDefs": [
              { 'bSortable': false, 'aTargets': [ 0, 1, 2 ] }
           ],
        // "tableTools": {
        //     "sSwfPath": "../assets/dataTables/swf/copy_csv_xls_pdf.swf"
        // }
    });
  });
</script>

<% end %>

