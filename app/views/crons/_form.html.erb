<%- model_class = Cron -%>
<%= simple_form_for(@cron, html: { class: "form-horizontal", role: "form", name: "form"  }) do |f| %>
  <% if @cron.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cron.errors.count, "error") %> prohibited this crom from being saved:</h2>
      <ul>
      <% @cron.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="ibox-content">
      <form method="get" class="form-horizontal">
          <div class="form-group">
            <%= f.label :data, class: "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.datetime_select :data, class: "form-control" %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <%= f.label :cnpj, class: "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.text_field :cnpj, class: "form-control" %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <%= f.label :xml_retorno, class: "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.text_area :xml_retorno, class: "form-control" %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>
          <div class="form-group">
            <%= f.label :mensagem, class: "col-md-2 control-label" %>
            <div class="col-md-10">
                <%= f.text_field :mensagem, class: "form-control" %>
            </div>
          </div>
          <div class="hr-line-dashed"></div>

        <div class="form-group">
          <div class="col-sm-4">
            <%= f.submit "Salvar", :class => 'btn btn-primary' %>
            <%= link_to 'Voltar', crons_path, :class => 'btn btn-white' %>
          </div>
        </div>
      </form>
    </div>
  </div>
  <br />
<% end %>
