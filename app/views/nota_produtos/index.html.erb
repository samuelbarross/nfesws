<%- model_class = NotaProduto -%>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>nota_produtos</h2>
        <ol class="breadcrumb">
            <li><a href="<%= url_for :controller => 'home', :action => 'index' %>">Home</a></li>
            <li class="active"><strong>nota_produtos</strong></li>
        </ol>
    </div>
    <div class="col-lg-2"></div>
</div>
<p id="notice"><%= notice %></p>
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <%= link_to new_nota_produto_path, class: 'btn btn-primary btn-xs' do %>
                        <span class="glyphicon glyphicon-plus"></span>
                        Novo
                    <% end %>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a href="#modal-form" data-toggle="modal" class="fa fa-wrench" ></a>

                        <div class="modal inmodal" id="modal-form" tabindex="-1" role="dialog" aria-hidden="true">
                            <div class="modal-dialog">
                                <%= search_form_for @search, url: search_nota_produtos_path, method: :post do |f| %>
                                <div class="modal-content animated bounceInRight">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title">Pesquisa</h4>
                                    </div>
                                    <div class="modal-body">
                                        <%= f.condition_fields do |c| %>
                                            <%= render "condition_fields", f: c %>
                                        <% end %>
                                        <p><%= link_to_add_fields "Adicionar condições", f, :condition %></p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Fechar</button>
                                        <%= f.submit "Procurar", class: "btn btn-primary" %>
                                    </div>
                                </div>
                                <% end %>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ibox-content">
                    <table class="table table-striped table-bordered table-hover Tabela" >
                        <thead>
                            <tr>
                                <th width="05%">&nbsp</th>
                                <th width="05%">&nbsp</th>
                                <th width="05%">&nbsp</th>
                                                                <th>Nritem</th>
                                                                <th>Descricao</th>
                                                                <th>Qtdecomercial</th>
                                                                <th>Qtdetributavel</th>
                                                                <th>Unidadecomercial</th>
                                                                <th>Unidadetributavel</th>
                                                                <th>Valorunitariocomercializacao</th>
                                                                <th>Float</th>
                                                                <th>Codproduto</th>
                                                                <th>Codncm</th>
                                                                <th>Codextipi</th>
                                                                <th>Cfop</th>
                                                                <th>Outrasdespesasacessorias</th>
                                                                <th>Valordesconto</th>
                                                                <th>Valortotalfrete</th>
                                                                <th>Valorseg</th>
                                                                <th>Indicadorcomposicaovalortotalnfe</th>
                                                                <th>Codeancomercial</th>
                                                                <th>Codeantributavel</th>
                                                                <th>Nrpedidocompra</th>
                                                                <th>Itempedidocompra</th>
                                                                <th>Valoraproximadotributos</th>
                                                                <th>Nrfci</th>
                                                                <th>Origemmercadoria</th>
                                                                <th>Codtributacaoicms</th>
                                                                <th>Valorbcicmsstretido</th>
                                                                <th>Valoricmsstret</th>
                                                                <th>Piscst</th>
                                                                <th>Cofinscst</th>
                                                                <th>Informacoesadicionaisproduto</th>
                                                                <th>Notafiscal</th>
                                                            </tr>
                        </thead>
                        <tbody>
                            <%= content_tag_for(:tr, @nota_produtos) do |nota_produto| %>
                            <td><%= link_to '', nota_produto, class: "btn btn-xs fa fa-search"%></td>
                            <td><%= link_to '', edit_nota_produto_path(nota_produto), class: "btn btn-xs fa fa-paste" %></td>
                            <td><%= link_to '', nota_produto, class: "btn btn-xs fa fa-times", method: :delete, data: { confirm: 'Confirma Exclusão ?' } %></td>
                                                        <td><%= nota_produto.nrItem %></td>
                                                        <td><%= nota_produto.descricao %></td>
                                                        <td><%= nota_produto.qtdeComercial %></td>
                                                        <td><%= nota_produto.qtdeTributavel %></td>
                                                        <td><%= nota_produto.unidadeComercial %></td>
                                                        <td><%= nota_produto.unidadeTributavel %></td>
                                                        <td><%= nota_produto.valorUnitarioComercializacao %></td>
                                                        <td><%= nota_produto.float %></td>
                                                        <td><%= nota_produto.codProduto %></td>
                                                        <td><%= nota_produto.codNCM %></td>
                                                        <td><%= nota_produto.codExTIPI %></td>
                                                        <td><%= nota_produto.cfop %></td>
                                                        <td><%= nota_produto.outrasDespesasAcessorias %></td>
                                                        <td><%= nota_produto.valorDesconto %></td>
                                                        <td><%= nota_produto.valorTotalFrete %></td>
                                                        <td><%= nota_produto.valorSeg %></td>
                                                        <td><%= nota_produto.indicadorComposicaoValorTotalNfe %></td>
                                                        <td><%= nota_produto.codEANComercial %></td>
                                                        <td><%= nota_produto.codEANTributavel %></td>
                                                        <td><%= nota_produto.nrPedidoCompra %></td>
                                                        <td><%= nota_produto.itemPedidoCompra %></td>
                                                        <td><%= nota_produto.valorAproximadoTributos %></td>
                                                        <td><%= nota_produto.nrFCI %></td>
                                                        <td><%= nota_produto.origemMercadoria %></td>
                                                        <td><%= nota_produto.codTributacaoICMS %></td>
                                                        <td><%= nota_produto.valorBCICMSSTRetido %></td>
                                                        <td><%= nota_produto.valorICMSSTRet %></td>
                                                        <td><%= nota_produto.pisCST %></td>
                                                        <td><%= nota_produto.cofinsCST %></td>
                                                        <td><%= nota_produto.informacoesAdicionaisProduto %></td>
                                                        <td><%= nota_produto.notaFiscal %></td>
                                                        <% end %>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>&nbsp</th>
                                <th>&nbsp</th>
                                <th>&nbsp</th>
                                                                <th>Nritem</th>
                                                                <th>Descricao</th>
                                                                <th>Qtdecomercial</th>
                                                                <th>Qtdetributavel</th>
                                                                <th>Unidadecomercial</th>
                                                                <th>Unidadetributavel</th>
                                                                <th>Valorunitariocomercializacao</th>
                                                                <th>Float</th>
                                                                <th>Codproduto</th>
                                                                <th>Codncm</th>
                                                                <th>Codextipi</th>
                                                                <th>Cfop</th>
                                                                <th>Outrasdespesasacessorias</th>
                                                                <th>Valordesconto</th>
                                                                <th>Valortotalfrete</th>
                                                                <th>Valorseg</th>
                                                                <th>Indicadorcomposicaovalortotalnfe</th>
                                                                <th>Codeancomercial</th>
                                                                <th>Codeantributavel</th>
                                                                <th>Nrpedidocompra</th>
                                                                <th>Itempedidocompra</th>
                                                                <th>Valoraproximadotributos</th>
                                                                <th>Nrfci</th>
                                                                <th>Origemmercadoria</th>
                                                                <th>Codtributacaoicms</th>
                                                                <th>Valorbcicmsstretido</th>
                                                                <th>Valoricmsstret</th>
                                                                <th>Piscst</th>
                                                                <th>Cofinscst</th>
                                                                <th>Informacoesadicionaisproduto</th>
                                                                <th>Notafiscal</th>
                                                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
