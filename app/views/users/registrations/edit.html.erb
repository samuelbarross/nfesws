<h2>Editar Usuário</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "form-horizontal"}) do |f| %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <p>Esperando a confirmação para: <%= resource.unconfirmed_email %></p>
  <% end %>

  <%= devise_error_messages! %>
  <div class="row">
    <div class="ibox-content">
      <div class="form-group">
        <%= f.label :email, "e-mail : ", class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= f.text_field :email, class: "form-control",required:true %>
        </div>
      </div>
      <div class="hr-line-dashed"></div>
      <div class="form-group">
        <%= f.label :password, "Senha : ", class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= f.text_field :password, class: "required form-control", type: "password" %>
          <span class="help-block m-b-none">Deixe em branco se não desejar alterar.</span> 
        </div>
      </div>
      <div class="hr-line-dashed"></div>
      <div class="form-group">
        <%= f.label :password_confirmation, "Confirmação : ", class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= f.text_field :password_confirmation, class: "form-control", type: "password" %>
        </div>
      </div>
      <div class="hr-line-dashed"></div>
      <div class="form-group">
        <%= f.label :current_password, "Senha atual : ", class: "col-md-2 control-label" %>
        <div class="col-md-10">
          <%= f.text_field :current_password, class: "required form-control", type: "password",required:true %>
          <span class="help-block m-b-none">Para alterar, você deve digitar a senha atual.</span> 
        </div>
      </div>
      <div class="hr-line-dashed"></div>




  <div class="form-group">
    <div class="col-sm-4">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to 'Voltar', :back, :class => 'btn btn-white' %>
    </div>
  </div>

<% end %>

<br />

<h3>Cancelar minha conta</h3>

<p>Insastifeito ? <%= link_to "Cancelar minha conta", registration_path(resource_name), data: { confirm: "Você tem certeza?" }, method: :delete %></p>