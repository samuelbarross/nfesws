<div class="middle-box text-center loginscreen">
  <div>
    <div>
      <!-- <h1 class="logo-name">SWS</h1> -->
      <div align="center"><%= image_tag "logo_windsolution.png", height: '110', width: '300' %></div>
    </div>
    <h2>Entrar</h2>   
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form', class:"m-t"}) do |f| %>
        <!--<form class="m-t" role="form" action="#">-->
        <%= devise_error_messages! %>
        <div class="form-group">
          <!--<input type="email" class="form-control" placeholder="Username" required="">-->
          <%= f.email_field :email, :autofocus => true, class: 'form-control', placeholder: t('mensagens.email'), required:true %>
        </div>
        <div class="form-group">
          <!--<input type="password" class="form-control" placeholder="Password" required="">-->
          <%= f.password_field :password, class: 'form-control', placeholder: t('mensagens.password'), required:true %>
        </div>
        <!--<button type="submit" class="btn btn-primary block full-width m-b">Login</button>-->
        <%= f.submit t('mensagens.sign_in'), :class => 'btn btn-primary block full-width m-b' %>
        <% if devise_mapping.rememberable? -%>
            <div class="checkbox" style="width:150px">
              <label>
                <%= f.check_box :remember_me %> Lembrar senha
              </label>
            </div>
        <% end -%>

        <!--<a href="#"><small>Forgot password?</small></a>-->
        <%- if devise_mapping.recoverable? %>
            <%= link_to t('mensagens.forgot_password'), new_password_path(resource_name), class: 'right' %>
        <% end -%>

        <!--<p class="text-muted text-center"><small>Do not have an account?</small></p> -->
        <!--<a class="btn btn-sm btn-white btn-block" href="<%#= url_for :controller => 'pages', :action => 'register' %>">Create an account</a>-->
        <%- if devise_mapping.registerable? %>
            <%= link_to t('mensagens.sign_up'), new_registration_path(resource_name), class: 'btn btn-sm btn-white btn-block'  %>
        <% end -%>
        </form>
        <p class="m-t"> <small>South Wind Systems Ltda &copy; 2015</small> </p>
    <% end %>
  </div>
</div>