<%- model_class = Dominio -%>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <p id="notice"><%= notice %></p>
                <form class="form-horizontal">
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%= model_class.human_attribute_name(:descricao) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%= @dominio.descricao %>
                            </label>
                        </div>

                        <div class="row">
                          <div class="col-lg-12">
                            <div class="panel blank-panel">
                              <div class="panel-heading">
                                <div class="panel-options">
                                  <ul class="nav nav-tabs">
                                    <li class="active"><a data-toggle="tab" href="#tab-1">Dominios Valores</a></li>
                                     <li><a data-toggle="tab" href="#tab-2">Dominios Campos</a></li>
                                  </ul>
                                </div>
                              </div>
                              <div class="panel-body">
                                <div class="tab-content">
                                  <div id="tab-1" class="tab-pane active">
                                      <table class="table table-bordered">
                                        <thead>
                                          <tr>
                                            <th width="30%">Código</th>
                                            <th width="70%">Descrição</th>
                                          </tr>
                                        </thead>
                                        <tbody>
                                          <% @dominio_valores.each do |dv| %>
                                            <tr class="fields">
                                              <td><%= dv.codigo %></td>
                                              <td><%= dv.descricao %></td>
                                            </tr>
                                          <% end %>
                                        </tbody>
                                      </table>
                                  </div>
                                  <div id="tab-2" class="tab-pane">
                                    <table class="table table-bordered">
                                      <thead>
                                        <tr>
                                          <th width="100%">Descrição</th>
                                        </tr>
                                      </thead>
                                      <tbody>
                                        <% @dominio_campos.each do |dc| %>
                                          <tr class="fields">
                                            <td><%= dc.descricao %></td>
                                          </tr>
                                        <% end %>
                                      </tbody>
                                    </table>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>


                    </div>
                    <div class="hr-line-dashed"></div>

                    <div class="form-group">
                    <div class="col-sm-4">
                        <%= link_to edit_dominio_path(@dominio), class: 'btn btn-primary' do %>
                        Editar
                        <% end %>
                        <%= link_to 'Voltar', dominios_path, :class => 'btn btn-white' %>
                        <%= link_to 'Novo', new_dominio_path, :class => 'btn btn-warning' %>
                    </div>
                </div>

                </form>

            </div>
        </div>
    </div>
</div>
