<div class="modal inmodal" id="modal-importar-xml" tabindex="-1" role="dialog" aria-hidden="true">
	<div class="modal-dialog modal-lg", style="width: 625px !important;">
	    <div class="modal-content animated bounceInRight">
	    	<%= form_tag(importar_nfe_xml_nota_fiscais_path, method: :post, multipart: true) do %>
		        <div class="modal-header">
		            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
		            <h4 class="modal-title">Importar XML</h4>
		        </div>
		        <div class="modal-body">
		            <%= file_field_tag(:nfe_xml, class: "form-control", style: "height:100%;", required: true) %>
		        </div>
		        <div class="modal-footer">
		            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancelar</button>
		            <%= submit_tag "Importar", class: "btn btn-primary" %>
		        </div>
	        <% end %>
	    </div>
	</div>
</div>
