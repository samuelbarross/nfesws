<%%- model_class = <%= singular_table_name.camelize  %> -%>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-content">
                <p id="notice"><%%= notice %></p>
                <form class="form-horizontal">
                <%- attributes.each do |attribute| -%>
                    <div class="form-group">
                        <div class="col-md-2 control-label">
                             <%%= model_class.human_attribute_name(:<%= attribute.name %>) %>:
                        </div>
                        <div class="col-md-10">
                            <label class="form-control">
                                <%%= @<%= singular_table_name %>.<%= attribute.name %> %>
                            </label>
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>

                <% end -%>
                <div class="form-group">
                    <div class="col-sm-4">
                        <%%= link_to edit_<%= singular_table_name %>_path(@<%= singular_table_name %>), class: 'btn btn-primary' do %>
                        Editar
                        <%% end %>
                        <%%= link_to 'Voltar', <%= index_helper %>_path, :class => 'btn btn-white' %>
                        <%%= link_to 'Novo', new_<%= singular_table_name %>_path, :class => 'btn btn-warning' %>

                    </div>
                </div>

                </form>

            </div>
        </div>
    </div>
</div>
